{
  "name": "md-document-converter",
  "version": "1.0.1",
  "description": "Convert Markdown files to HTML, PDF, and Word documents with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mdconvert": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs",
      "types": "./dist/plugins/index.d.ts"
    }
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "docs": "typedoc src/index.ts",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "check-types": "tsc --noEmit",
    "prettier:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "markdown",
    "converter",
    "docx",
    "pdf",
    "html",
    "cli",
    "document",
    "typescript",
    "converter-cli",
    "markdown-to-pdf",
    "markdown-to-html",
    "markdown-to-word"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "docx": "^8.5.0",
    "globby": "^14.0.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-table-of-contents": "^0.6.0",
    "ora": "^7.0.1",
    "puppeteer": "^20.7.4",
    "shiki": "^0.14.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brentmartinmiller/md-document-converter.git"
  },
  "bugs": {
    "url": "https://github.com/brentmartinmiller/md-document-converter/issues"
  },
  "homepage": "https://github.com/brentmartinmiller/md-document-converter#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
